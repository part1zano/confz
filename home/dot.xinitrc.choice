setxkbmap -option grp:caps_toggle -option compose:rctrl -option terminate:ctrl_alt_bksp us,ru
xset b 0
xset fp+ /usr/local/share/fonts/Droid
xset fp+ /usr/local/share/fonts/ubuntu-font
xset fp rehash

mixer 100

if [ "$DISPLAY" == ":0.0" ] ; then
	eval `ssh-agent`
	exec wmii
#	exec fluxbox
	ssh-agent -k
elif [ "$DISPLAY" == ":1" ] ; then
	exec fluxbox
else
	exec kodi
fi

